---
import proposalPic from "../../public/proposal.jpg";
import TimelineCard from "./TimelineCard.vue";
import WhenAndWhere from "./WhenAndWhere.vue";
import RSVPCard from "./RSVPCard.astro";
import Map from "./Map.astro";
import TravelAndAccomodationCard from "./TravelAndAccomodationCard.astro";
import { amalfiNight, randomShit, reception, wedding } from "../eventInfo";
---

<div class="flex h-full flex-col">
  <div
    class="bg-white/75 bg-[url('src/assets/diya_background.jpeg')] bg-contain bg-blend-lighten"
  >
    <div
      class="font-dancing-script text-title-green flex items-center justify-center text-[40px] md:py-2.5 md:text-6xl"
    >
      Nainesh & Nikita
    </div>
    <!-- TODO: Make these links work and look nicer -->
    <div class="flex flex-row items-center justify-center gap-4 text-center">
      <span>Timeline</span>
      <span>RSVP</span>
      <span>Travel and Accomodation</span>
      <span>Map</span>
    </div>
    <img
      src={proposalPic.src}
      alt="Proposal Picture"
      class="m-auto h-36 w-full md:h-96 md:w-3/4"
    />
    <WhenAndWhere client:load />
  </div>

  <div class="w-full bg-linear-to-br from-[#FFFFFF] to-[#E8E8CC]">
    <!--TODO: Not sure about these drums, maybe need another img -->
    <div class="flex w-full flex-col gap-1">
      <div
        class="xs:mx-32 mx-28 flex h-8 flex-row justify-center bg-[url('/src/assets/dandiya-ladies.svg')] bg-center bg-repeat-space md:mx-96 md:h-12"
      >
      </div>
      <!-- <div class="mb-6"></div> -->

      <div
        class="flex w-full flex-col gap-1 md:m-auto md:grid md:w-9/10 md:grid-cols-2 md:gap-6"
      >
        <TimelineCard
          event={amalfiNight}
          bgColor="yellow"
          backgroundImage="elephants"
          backgroundPosition="bottom"
          client:load
        />

        <TimelineCard
          event={randomShit}
          bgColor="green"
          backgroundImage="peacock"
          backgroundPosition="right"
          client:load
        />

        <TimelineCard
          event={wedding}
          bgColor="yellow"
          backgroundImage="elephants"
          backgroundPosition="bottom"
          client:load
        />

        <TimelineCard
          event={reception}
          bgColor="green"
          backgroundImage="birds-of-paradise"
          backgroundPosition="left"
          client:load
        />
      </div>
      <div
        class="xs:mx-32 mx-28 flex h-8 flex-row justify-center bg-[url('/src/assets/dandiya-ladies.svg')] bg-center bg-repeat-space md:mx-96 md:h-12"
      >
      </div>

      <RSVPCard />

      <div
        class="xs:mx-32 mx-28 flex h-8 flex-row justify-center bg-[url('/src/assets/dandiya-ladies.svg')] bg-center bg-repeat-space md:mx-96 md:h-12"
      >
      </div>

      <TravelAndAccomodationCard />

      <div
        class="xs:mx-32 mx-28 flex h-8 flex-row justify-center bg-[url('/src/assets/dandiya-ladies.svg')] bg-center bg-repeat-space md:mx-96 md:h-12"
      >
      </div>

      <Map />
    </div>
  </div>
</div>
